@page
@model FitnessAndNutritionApp.Pages.Auth.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/css/Authentication/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <!-- Partea cu imaginea de fundal -->
        <div class="login-image"></div>

        <!-- Partea cu formularul de login -->
        <div class="login-form">
            <h2 class="form-title">Log in</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <div class="form-links">
                        <a href="/Auth/SignUp" class="signup-link">Sign up now</a>
                        <a href="/Auth/ForgotPassword" class="forgot-password-link">Forgot password?</a>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Log in</button>
            </form>
        </div>
    </div>

</body>
</html>
