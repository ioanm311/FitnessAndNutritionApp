@page
@model FitnessAndNutritionApp.Pages.Auth.SignUpModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link href="~/css/Authentication/signup.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="signup-image"></div>

        <div class="signup-form">
            <h2 class="form-title">Sign Up</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="SignUpInfo.FirstName"></label>
                    <input asp-for="SignUpInfo.FirstName" class="form-control" />
                    <span asp-validation-for="SignUpInfo.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SignUpInfo.LastName"></label>
                    <input asp-for="SignUpInfo.LastName" class="form-control" />
                    <span asp-validation-for="SignUpInfo.LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SignUpInfo.Email"></label>
                    <input asp-for="SignUpInfo.Email" class="form-control" type="email" />
                    <span asp-validation-for="SignUpInfo.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SignUpInfo.Password"></label>
                    <input asp-for="SignUpInfo.Password" class="form-control" type="password" />
                    <span asp-validation-for="SignUpInfo.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SignUpInfo.ConfirmPassword"></label>
                    <input asp-for="SignUpInfo.ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="SignUpInfo.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Register</button>
                <div class="login-link-container">
                    <a href="/Auth/Login" class="login-link">Have an account? Log in.</a>
                </div>
            </form>
        </div>
    </div> 

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
